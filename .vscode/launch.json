    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) loglayer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/loglayer",
            "args": ["flash_test"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
